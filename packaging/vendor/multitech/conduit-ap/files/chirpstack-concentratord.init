#!/bin/sh

NAME="chirpstack-concentratord"
DESC="ChirpStack Concentratord"
DAEMON_BIN=/opt/$NAME/$NAME
DAEMON_PID=/var/run/$NAME.pid

CONF_DIR=/var/config/chirpstack-concentratord

read_lora_hw_info() {
	lora_id=$(mts-io-sysfs show lora/product-id 2> /dev/null)
	lora_eui=$(mts-io-sysfs show lora/eui 2> /dev/null)
	# remove all colons
	lora_eui_raw=${lora_eui//:/}
	lora_hw=$(mts-io-sysfs show lora/hw-version 2> /dev/null)
}

hardware_found() {
	if [[ "$lora_id" =~ "MTCAP-LORA" ]]; then
		return 0
	fi

	return 1
}

copy_config() {
	if [ $lora_id == "MTCAP-LORA-868" ]; then
		model="${lora_id,,}"
		model="${model//-/_}"
		model="${model}_eu868"
		band_config="eu868"
		channel_config="eu868_0"
	fi

	if [ $lora_id == "MTCAP-LORA-915" ]; then
		model="${lora_id,,}"
		model="${model//-/_}"
		model="${model}_us915"
		band_config="us915"
		channel_config="us915_0"
	fi

	mkdir -p $CONF_DIR
	cp $CONF_DIR/examples/global.toml $CONF_DIR/global.toml
	cp $CONF_DIR/examples/$channel_config.toml $CONF_DIR/channels.toml

	sed -i "s/gateway_id=.*/gateway_id=\"${lora_eui_raw}\"/" $CONF_DIR/global.toml
	sed -i "s/model=.*/model=\"multitech_${model}\"/" $CONF_DIR/global.toml
}

do_start() {
	read_lora_hw_info
	if hardware_found; then
		echo "Found $lora_id with $lora_hw hardware"
	else
		echo "$0: LORA card not detected"
		exit 1
	fi

	if ! [ -f "$CONF_DIR/global.toml" ]; then
		copy_config
	fi

    echo "Starting $NAME"
	start-stop-daemon \
        --start \
        --background \
        --make-pidfile \
        --pidfile $DAEMON_PID \
        --exec $DAEMON_BIN -- -c $CONF_DIR/global.toml -c $CONF_DIR/channels.toml
}

function do_stop {
    echo "Stopping $NAME"
    start-stop-daemon \
        --stop \
        --oknodo \
        --quiet \
        --pidfile $DAEMON_PID
}

case "$1" in
    "start")
        do_start
        ;;
    "stop")
        do_stop
        ;;
    "restart")
        do_stop
        do_start
        ;;
    *)
        echo "Usage: $1 {start|stop|restart}"
        exit 1
        ;;
esac
